{
  "clearMocks": false,
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageThreshold": {
      "global": {
          "branches": 100,
          "functions": 100,
          "lines": 100,
          "statements": 100
      }
  },
  "testPathIgnorePatterns": [
    "<rootDir>/sandbox/"
  ],
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(t|j)sx?$",
  "transform": {
      "^.+\\.[tj]sx?$": "ts-jest"
  },
  "bail": 1,
  "verbose": true,
  "preset": "ts-jest",
  "globals": {
      "ts-jest": {
          "tsConfig": "tsconfig.json"
      }
  }
}